#!/bin/sh

indent()
{
    sed -u 's/^/       /';
}

echo "[AUTORUN] --> Found the autorun.sh"

# if autorun.sh has contents, display them (indented to align)
# otherwise error

if [ ! -s $1/autorun.sh ]; then
    echo "[AUTORUN] autorun.sh was empty!";
    exit 1;
else
    echo "[AUTORUN] --> Execute autorun.sh" | indent;
    bash autorun.sh;
fi | indent;
